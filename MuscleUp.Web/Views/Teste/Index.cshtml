﻿@{
    Layout = "_LayoutSemDesign";
}
@section Scripts {
    <script src="~/js/conta/module.js"></script>
}

<div class="d-flex justify-content-center align-items-center vh-100 " ng-controller="CadastroController" ng-init="iniciar()">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title text-center mb-4">Cadastro</h3>
                        <form ng-submit="cadastrar()">
                            <div class="mb-3">
                                <label for="Nome" class="form-label">Nome</label>
                                <input ng-model="usuario.name" type="text" class="form-control" id="Nome" name="Nome" required>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label">E-mail</label>
                                <input ng-model="usuario.email" type="email" class="form-control" id="email" name="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="senha" class="form-label">Senha</label>
                                <input ng-model="usuario.senha" type="password" class="form-control" id="senha" name="senha" required>
                            </div>


                            <div class="d-flex flex-column gap-3">
                                <button type="submit" class="btn btn-primary">Cadastrar</button>
                                <button class="btn btn-secondary" href="@Url.Action("Index", "Home")">Voltar </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

